/* pages/ranking/ranking.wxss */

page {
    background: #333;
}

.rank-item-title {
    font-size: 32rpx;
    padding-left: 20rpx;
    line-height: 60rpx;
    border-left: 10rpx #ff5a5f solid;
    border-top: 1px #222 solid;
    border-bottom: 1px #222 solid;
    color: #fff;
}

.rank-item {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 10rpx;
}

.rank-box {
    position: relative;
    width: 30%;
    flex-shrink: 0;
    box-sizing: border-box;
    padding: 10rpx;
    text-align: center;
    border-radius: 10rpx;
    margin: 10rpx;
    box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.4),
                0px 1px 1px 0px rgba(255, 255, 255, 0.1) inset;
    transition: all 0.2s;
    border: 1px #333 solid;
    
    
}

.rank-box:active {
    box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.4);
    border: 1px #222 solid;
    box-sizing: border-box;
}

.rank-box .head {
    position: relative;
    width: 100%;
    height: 0;
    padding-top: 100%;
    box-sizing: border-box;
    border-radius: 8rpx;
    border: 1px #666 solid;
    /* box-shadow: 0px 1px 12px 0px rgba(0, 0, 0, 0.4); */
    overflow: hidden;
}

.head image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.rank-title {
    font-size: 28rpx;
    /* color: #333; */
    line-height: 1.5;
    overflow: hidden;
    margin-top: 10rpx;
    color: #999;
}
