/* pages/privateFM/privateFM.wxss */

.wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    overflow: hidden;
}

.image-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(50rpx);
    transform: scale(1.2);
    box-sizing: border-box;
}

.music-box {
    position: relative;
    top: -20rpx;
    z-index: 999;
    width: 85%;
    border-radius: 5rpx;
    box-shadow: 0 5px 10px 3px rgba(0, 0, 0, 0.1);
    background: #fff;
    overflow: hidden;
    box-sizing: border-box;
}

.music-box .play-button {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 180rpx;
    margin: auto;
    width: 100rpx;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.2);
    border: 2px rgba(255, 255, 255, 0.7) solid;
    border-radius: 50%;
}

.music-box .play-button .icon-play {
    color: #fff;
    font-size: 50rpx;
    padding-left: 8rpx;
}

.music-head {
    width: 100%;
    height: 600rpx;
}

.music-head image {
    width: 100%;
    height: 100%;
}

.music-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}

.music-item-box {
    width: 100%;
    padding: 20rpx 0;
    background: rgba(255, 255, 255, 0.9);
}

.music-title {
    font-size: 26rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #666;
}

.paly-group {
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 0 15rpx;
    box-sizing: border-box;
}

.buttons {
    display: flex;
    align-items: center;
    color: #fff;
}

.paly-group-button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    /* font-size: 40rpx; */
    background: #111;
    margin: 0 10rpx;
}

.paly-group-button .music {
    font-size: 30rpx;
    /* line-height: 1; */
}

.paly-group-button.right {
    margin-right: 0;
    width: auto;
    height: auto;
    background: none;
    color: #666;
}

.paly-group-button.right .music {
    font-size: 40rpx;
}

.time {
    padding: 0;
}

/* .play {
    width: 60rpx;
    height: 60rpx;
} */

.paly-group .time {
    font-size: 24rpx;
    color: #999;
}

.progress {
    padding: 0 20rpx;
    padding-top: 20rpx;
}
