/* pages/login/login.wxss */

page {
    background: #333;
}

.wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
    height: 100vh;
}

.logo {
    width: 200rpx;
    height: 200rpx;
    margin: 100rpx 0;
    /* border: 1px red solid; */
}
.logo image {
    width: 100%;
    height: 100%;
}
.wrap-item {
    width: 75%;
    height: 90rpx;
    margin: 20rpx 0;
    border-radius: 90rpx;
    /* border: 1px #222 solid; */
    box-shadow: -2px 2px 0rpx 0rpx rgba(0, 0, 0, 0.8) inset,
                0px 1px 0rpx 0rpx rgba(255, 255, 255, 0.3);
    background: #222;
    color: #ccc;
}

.button {
    margin-top: 150rpx;
}

.wrap-item input {
    width: 100%;
    height: 100%;
    font-size: 32rpx;
    padding: 0 30rpx;
}

.button  button {
    border-radius: 90rpx;
    background: #222;
    color: #999;
    height: 90rpx;
    font-size: 34rpx;
    line-height: 90rpx;
    box-shadow: -1px 2px 5rpx 2rpx rgba(0, 0, 0, 0.8),
                -1px 1px 0rpx 0rpx rgba(255, 255, 255, 0.2) inset;
    text-shadow: -1px 2px 2rpx rgba(0, 0, 0, 0.8);
    transition: all 0.1s;
}

.button  button:active {
    box-shadow: -1px 1px 0rpx 0rpx rgba(0, 0, 0, 0.8),
                -1px 1px 0rpx 0rpx rgba(255, 255, 255, 0.1) inset;
    /* font-size: 32rpx;      */
    line-height: 80rpx;
          
}


.explain {
    position: absolute;
    bottom: 50rpx;
    font-size: 28rpx;
    padding: 0 100rpx;
    text-align: center;
    color: #999;
    text-shadow: -1px 1px 1rpx rgba(0, 0, 0, 0.8);    
}