/* pages/rankDetail/rankDetail.wxss */

page {
  background: #333;
}

.detail-wrap {
  opacity: 0;
  transition: opacity 1s;
}

.detail-head-wrap {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px #222 solid;
  box-sizing: border-box;
  font-size: 28rpx;
}

.cover-box {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 5px 2px rgba(0, 0, 0, 0.2);
}

.cover-image-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  /* height: 100%; */
  filter: blur(50rpx);
  transform: scale(1.5);
  /* opacity: 0.8; */
}

.cover-item {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  padding: 50rpx;
  padding-right: 20rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.cover-head {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 5px 1px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.cover-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  padding-left: 20rpx;
  color: #fff;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
}

.cover-info {
  display: flex;
  align-items: center;
}

.cover-title {
  font-size: 26rpx;
  color: #f5f5f5;
  padding-left: 20rpx;
}

.info-head {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.cover-head image, .info-head image {
  width: 100%;
  height: 100%;
}

.play-icon {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border: 1px #333 solid;
  border-radius: 50%;
  margin-right: 20rpx;
}

.play-icon .icon-play {
  font-size: 22rpx;
  color: #ccc;
}

.item-box {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 15rpx 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1px #222 solid;
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.4),
                0px 1px 1px 0px rgba(255, 255, 255, 0.1) inset;
  /* border-radius: 4rpx; */
  color: #ccc;
  text-shadow: -1px 1px 2px rgba(0, 0, 0, 0.8);
}

.item-box:active {
  box-shadow: 0px 0px 4rpx 2rpx rgba(0, 0, 0, 0);
  /* background: rgba(0, 0, 0, 0.8); */
  border: 1px #222 solid;
  box-sizing: border-box;
}

.item-box::after {
  left: 70rpx;
}

/* .item-box */

.item-box .head {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 50rpx;
  height: 80rpx;
}

.item-box .head.head-image {
  flex-shrink: 0;
  width: 80rpx;
  margin-left: 10rpx;
  border-radius: 5rpx;
  overflow: hidden;
}

.item-box .head.head-image image {
  width: 100%;
  height: 100%;
}

.item-box .head .music {
  font-size: 40rpx;
  color: #666;
}

.item-box .head .music.one {
  color: #f4ea2a;
}

.item-box .head .music.two {
  color: #dbdbdb;
}

.item-box .head .music.three {
  color: #e6b540;
}

.item-box  .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  padding-left: 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.item-box .ripple {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
