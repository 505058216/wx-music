/* components/progress/progress.wxss */

.wrap {
  position: relative;
  width: 100%;
}

.movable {
  width: 100%;
  height: 100%;
}

.movable-view {
  display: flex;
  justify-content: center;
  align-items: center;
  background: blue;
}

.sub {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  /* border: 1px blue solid; */
  background: #fff;
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.sub::after {
  content: '';
  position: absolute;
  left: -2px;
  right: 0;
  top: -0;
  bottom: 0;
  margin: auto;
  width: 4px;
  height: 4px;
  background: #ff5a5f;
  z-index: 5;
  border-radius: 50%;
}

.mask-bottom {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: -1;
  background: #999;
}

.mask-active {
  position: relative;
  height: 100%;
  background: #ff5a5f;
  /* transition: width 0.8s; */
}
