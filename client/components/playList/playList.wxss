/* components/playList/playList.wxss */
@import '../../common/font/iconfont.wxss';

.warp {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.5);
}

.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    padding: 0 30rpx;
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.4), 0px -1px 5px 0px rgba(255, 255, 255, 0.1) inset;
    text-shadow: 1px -1px 1px rgba(0, 0, 0, 0.8);
}

.random {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #eee;
}

.box {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: #333;
}

.box-warp {
    min-height: 400rpx;
    max-height: 700rpx;
    overflow-y: scroll;
}

.box-item {
    display: flex;
    margin: 15rpx;
    /* width: 100%; */
    height: 80rpx;
    border: 1px rgba(0, 0, 0, 0.2) solid;
    box-shadow: 0px 0px 1px 0px rgba(0, 0, 0, 0.1),
                0px -1px 5px 0px rgba(255, 255, 255, 0.1) inset;
    /* border-radius: 4rpx; */
    color: #ddd;
    text-shadow: 1px -1px 1px rgba(0, 0, 0, 0.8);
    overflow: hidden;
    /* background: #222; */
}

.box-item-content {
    height: 100%;
    width: 100%;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sub-title {
    padding-left: 20rpx;
    font-size: 26rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.close {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    width: 80rpx;
    height: 80rpx;
}
